{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
